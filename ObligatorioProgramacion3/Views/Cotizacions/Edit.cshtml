@model ObligatorioProgramacion3.Models.Cotizacion

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link rel="stylesheet" href="~/css/StylesCrudeEdit.css" />
</head>

<h1 class="text-center">Edit Cotizacion</h1>


<hr />
<div class="row">
    <div class="col-md-4 container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Cotizacion1" class="control-label"></label>
                <input asp-for="Cotizacion1" class="form-control" />
                <span asp-validation-for="Cotizacion1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCotizacion" class="control-label"></label>
                <input asp-for="FechaCotizacion" class="form-control" />
                <span asp-validation-for="FechaCotizacion" class="text-danger"></span>
            </div>
            <div class="form-group button-group">
                <a asp-action="Index" class="button-link">Cancelar</a>
                <input type="submit" value="Guardar" class="button-link" />
            </div>
        </form>
    </div>
</div>


