@model ObligatorioProgramacion3.Models.Pago

@{
    ViewData["Title"] = "Edit";
    var metodoPagoOptions = new List<SelectListItem>
    {
        new SelectListItem { Value = "Tarjeta", Text = "Tarjeta" },
        new SelectListItem { Value = "Efectivo", Text = "Efectivo" }
    };
}

<head>
    <link rel="stylesheet" href="~/css/StylesCrudeEdit.css" />
</head>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1 class="text-center">Edit Pagos </h1>


<hr />
<div class="row">
    <div class="col-md-4 container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ReservaId" class="control-label"></label>
                <select asp-for="ReservaId" class="form-control" asp-items="ViewBag.ReservaId"></select>
                <span asp-validation-for="ReservaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" class="form-control" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetodoPago" class="control-label"></label>
                <select asp-for="MetodoPago" class="form-control" asp-items="metodoPagoOptions"></select>
                <span asp-validation-for="MetodoPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdClima" class="control-label"></label>
                <select asp-for="IdClima" class="form-control" asp-items="ViewBag.IdClima"></select>
                <span asp-validation-for="IdClima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCotizacion" class="control-label"></label>
                <select asp-for="IdCotizacion" class="form-control" asp-items="ViewBag.IdCotizacion"></select>
                <span asp-validation-for="IdCotizacion" class="text-danger"></span>
            </div>
            <div class="form-group button-group">
                <a asp-action="Index" class="button-link">Cancelar</a>
                <input type="submit" value="Guardar" class="button-link" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
