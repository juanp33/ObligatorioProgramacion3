@model IEnumerable<ObligatorioProgramacion3.Models.Plato>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="~/css/StylesCrudeINDEX.css" asp-append-version="true" />
</head>

<h1>Index</h1>

<p>
    <a class="BotonCreate" asp-action="Create">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombrePlato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripción)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRestaurante)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var plato in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => plato.NombrePlato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => plato.Descripción)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => plato.Precio)
                </td>
                <td>
                    <img src="@plato.Imagen" alt="@plato.NombrePlato" style="max-width: 100px; max-height: 100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => plato.IdRestaurante)
                </td>
                <td>
                    <a class="botonesEditDetailsDelete boton-edit" asp-action="Edit" asp-route-id="@plato.Id">Editar</a> |
                    <a class="botonesEditDetailsDelete boton-details" asp-action="Details" asp-route-id="@plato.Id">Detalles</a> |
                    <a class="botonesEditDetailsDelete boton-delete" asp-action="Delete" asp-route-id="@plato.Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
