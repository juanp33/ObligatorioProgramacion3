@model IEnumerable<Plato>

<h1>@ViewData["Title"]</h1>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seleccione sus platos de preferencia</title>
    <style>

        /* Estilos para el contenedor del carrito */
        #carritoContainer {
            margin-top: 20px;
            padding: 20px;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            background-color: #ffffff;
            width: 100%;
            max-width: 500px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            /* Estilos para el título del carrito */
            #carritoContainer h1 {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 20px;
                text-align: center;
            }

        /* Estilos para los ítems del carrito */
        .carrito-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #dee2e6;
        }

            .carrito-item:last-child {
                border-bottom: none;
            }

            /* Estilos para la descripción del ítem */
            .carrito-item p {
                margin: 0;
                font-size: 16px;
            }

            /* Estilos para el botón de eliminar */
            .carrito-item button {
                background-color: #dc3545;
                color: #ffffff;
                border: none;
                border-radius: 5px;
                padding: 5px 10px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .carrito-item button:hover {
                    background-color: #c82333;
                }

        /* Estilos para el total */
        #carritoTotal {
            font-size: 18px;
            font-weight: bold;
            text-align: right;
            margin-top: 20px;
        }

        /* Estilos para el botón continuar */
        #carritoContainer button.continuar {
            display: block;
            width: 100%;
            background-color: #28a745;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            padding: 10px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 20px;
        }

            #carritoContainer button.continuar:hover {
                background-color: #218838;
            }

           


        .PlatosContainer {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .PlatosMostrar {
            display: flex;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            padding: 20px;
            width: 500px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
            text-align: left;
        }

            .PlatosMostrar img {
                max-width: 200px;
                margin-right: 40px;
            }

            .PlatosMostrar:hover {
                transform: scale(1.05);
            }

            .PlatosMostrar h2 {
                margin-top: 1px;
            }

    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        function añadirAlCarrito(platoId) {
            $.post('/Carrito/AñadirAlCarrito', { id: platoId }, function (response) {
                if (response.success) {
                    actualizarCarrito();
                }
            });
        }

        function eliminarDelCarrito(platoId) {
            $.post('/Carrito/EliminarDelCarrito', { id: platoId }, function (response) {
                if (response.success) {
                    actualizarCarrito();
                }
            });
        }

        function actualizarCarrito() {
            $.get('/Carrito/ObtenerCarrito', function (data) {
                $('#carritoContainer').html(data);
            });
        }

        $(document).ready(function () {
            actualizarCarrito();
        });
    </script>
</head>
<body>
    <div class="PlatosContainer">
        @foreach (var plato in Model)
        {
            <div class="PlatosMostrar">
                <img src="@plato.Imagen" alt="Imagen del Plato" />
                <div>
                    <h4>Plato: @plato.NombrePlato</h4>
                    <p>Descripción: @plato.Descripción</p>
                    <p>Precio: @plato.Precio</p>
                    <button onclick="añadirAlCarrito(@plato.Id)">Añadir al carrito</button>
                </div>
            </div>
        }
    </div>

    <div id="carritoContainer"></div>
</body>
