@model IEnumerable<Plato>

<h1>@ViewData["Title"]</h1>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seleccione sus platos de preferencia</title>
    <style>
        body {
            display: flex; /* Alineación horizontal de los contenedores principales */
            margin: 0;
            padding: 0;
            min-height: 100vh; /* Asegura que el body tome todo el alto de la ventana */
        }

        .PlatosContainer {
            flex: 1; /* Toma todo el espacio restante después del carrito */
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            padding: 20px;
            overflow-y: auto; /* Permite scrolling vertical si hay muchos platos */
        }

        .PlatosMostrar {
            display: flex;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.1s;
            align-items: center;
            width: calc(50% - 20px); /* Ajuste para que dos platos quepan en una fila */
        }

            .PlatosMostrar img {
                max-width: 200px;
                margin-right: 40px;
            }

            .PlatosMostrar:hover {
                transform: scale(1.01);
            }

        #carritoContainer {
            display:flex;
            flex-wrap:wrap;
            width: 100%; /* Ancho fijo para el carrito */
            height: 100%;
            background-color: #f3f3f3;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            height: fit-content;
            margin-left: 20px; /* Espacio entre los platos y el carrito */
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        function añadirAlCarrito(platoId) {
            $.post('/Carrito/AñadirAlCarrito', { id: platoId }, function (response) {
                if (response.success) {
                    actualizarCarrito();
                } else {
                    alert('Error al añadir al carrito');
                }
            });
        }

        function eliminarDelCarrito(platoId) {
            $.post('/Carrito/EliminarDelCarrito', { id: platoId }, function (response) {
                if (response.success) {
                    actualizarCarrito();
                } else {
                    alert('Error al eliminar del carrito');
                }
            });
        }

        function actualizarCarrito() {
            $.get('/Carrito/ObtenerCarrito', function (data) {
                $('#carritoContainer').html(data);
            });
        }

        $(document).ready(function () {
            actualizarCarrito();
        });
    </script>
</head>
<body>
    <div class="PlatosContainer">
        @foreach (var plato in Model)
        {
            <div class="PlatosMostrar">
                <img src="@plato.Imagen" alt="Imagen del Plato" />
                <div>
                    <h4> @plato.NombrePlato</h4>
                    <p> @plato.Descripción</p>
                    <p>Precio: @plato.Precio</p>
                    <button onclick="añadirAlCarrito(@plato.Id)">Añadir al carrito</button>
                </div>
            </div>
        }
    </div>
    <div class="carritoContainer" id="carritoContainer">
        
    </div>
</body>
