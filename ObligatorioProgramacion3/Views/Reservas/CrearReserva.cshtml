

@model ObligatorioProgramacion3.Models.Reserva

@{
    string NombreRestaurante = ViewData["NombreRestaurante"] as string;
    int? Capacidad = ViewData["Capacidad"] as int?;
    int? numeroMesa = ViewData["NumeroMesa"] as int?;
    ViewData["Title"] = "Crear Reserva";
    var fechaReserva = Model.FechaReserva.ToString("dd/MM/yyyy");
    var estadoReserva = Model.Estado;
}
<head>
    <link rel="stylesheet" href="~/css/StylesCrudeINDEX.css" asp-append-version="true" />
</head>
<style>
    h1, h4 {
        color: #5d4037;
        text-align: center;
    }

    .centered-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        
        min-height: 100vh;
        padding: 20px;
        box-sizing: border-box;
    }

    .form-container {
        background-color: #5d4037;
        color:white;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 20px 0;
        width: 100%;
        max-width: 600px;
    }

        .form-container p {
            font-size: 16px;
            margin: 10px 0;
        }

        .form-container .form-group {
            margin-top: 20px;
        }

        .form-container .btn-primary {
            background-color: #D7CCC8;
            color: #5D4037;
           
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .form-container .btn-primary:hover {
                background-color: #48322a;
                border-color: #48322a;
                color:white;
            }

    a {
        color: #5d4037;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #48322a;
            text-decoration: underline;
        }

    .volver-link {
        display: block;
        text-align: center;
        margin-top: 20px;
    }

</style>
<div class="centered-container">
    <h1>Detalles de la Reserva</h1>

    <h4>Información de la Reserva</h4>
    <hr />
    <div class="form-container">
        <form asp-action="CrearReserva" method="post">
            <input asp-for="MesaId" type="hidden" />
            <input asp-for="FechaReserva" type="hidden" />
            <input asp-for="Estado" type="hidden" value="Pendiente" />
            <input asp-for="IdRestaurante" type="hidden" />
            <input asp-for="UsuarioId" type="hidden" />
            <input asp-for="ClienteId" type="hidden" />

         
            <p>Sucursal: @NombreRestaurante</p>
            <p>Fecha Reserva: @fechaReserva </p>
            <p>Numero de mesa: @numeroMesa </p>
            <p>Capacidad: @Capacidad</p>

            <div class="form-group">
                <input type="submit" value="Confirmar Reserva" class="btn btn-primary" />
            </div>
        </form>
    </div>

    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}