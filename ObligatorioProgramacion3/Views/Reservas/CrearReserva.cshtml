@model ObligatorioProgramacion3.Models.Reserva

@{
    ViewData["Title"] = "Crear Reserva";
}


<h1>Crear Reserva para Mesa @ViewData["MesaId"] el @ViewData["Fecha"]</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearReserva" method="post">
            <input asp-for="MesaId" type="hidden" />
            <input asp-for="FechaReserva" type="hidden" />
            <input asp-for="Estado" type="hidden" value="Pendiente" />
            <input asp-for="IdRestaurante" type="hidden" />
            <input asp-for="UsuarioId" type="hidden" />
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <input asp-for="ClienteId" class="form-control" type="hidden" />
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SeleccionarMesa" asp-route-fecha="@ViewData["Fecha"]">Volver a Selección de Mesa</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}