@{
    ViewData["Title"] = "Seleccionar Fecha";
    var restauranteId = ViewData["RestauranteId"] as int?;
    var today = DateTime.Now.ToString("yyyy-MM-dd");
}
<style>
    
</style>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/StylesCrudeINDEX.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <h1>Seleccionar Fecha</h1>
        <form asp-action="EnviarFecha" method="post">
            <div class="form-group">
                <input type="hidden" name="restauranteId" value="@restauranteId" />
                <label for="fecha">Fecha</label>
                <input type="date" id="fecha" name="fecha" min="@today" required />
            </div>
            <button type="submit" class="btn-primary">Seleccionar</button>
        </form>
    </div>
</body>
</html>