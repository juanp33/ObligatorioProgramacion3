@model ObligatorioProgramacion3.Models.Reserva

@{
    ViewData["Title"] = "Edit";
    var estadoOptions = new List<SelectListItem>
    {
        new SelectListItem { Value = "Pendiente", Text = "Pendiente" },
        new SelectListItem { Value = "Confirmada", Text = "Confirmada" },
        new SelectListItem { Value = "Cancelada", Text = "Cancelada" }
    };
}

<head>
    <link rel="stylesheet" href="~/css/StylesCrudeEdit.css" asp-append-version="true" />
</head>

<h1 class="text-center">Edit Reserva</h1>

<div class="row">
    <div class="col-md-4 container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MesaId" class="control-label"></label>
                <select asp-for="MesaId" class="form-control" asp-items="ViewBag.MesaId"></select>
                <span asp-validation-for="MesaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaReserva" class="control-label"></label>
                <input asp-for="FechaReserva" class="form-control" />
                <span asp-validation-for="FechaReserva" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control" asp-items="estadoOptions"></select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdRestaurante" class="control-label"></label>
                <select asp-for="IdRestaurante" class="form-control" asp-items="ViewBag.IdRestaurante"></select>
                <span asp-validation-for="IdRestaurante" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>

            <div class="form-group button-group">
                <a asp-action="Index" class="button-link">Cancelar</a>
                <input type="submit" value="Guardar" class="button-link" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
