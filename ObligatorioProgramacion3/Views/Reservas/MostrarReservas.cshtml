@model IEnumerable<Reserva>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<h1>@ViewData["Title"]</h1>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seleccione su restaurante de preferencia</title>
    <style>


        .reservaContainer {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .ReservaMostrar {
            display: flex;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            padding: 20px;
            width: 500px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 2s;
            text-align: left;
        }

            .ReservaMostrar img {
                max-width: 200px;
                margin-right: 40px;
            }

            .button-link:hover {
                transform: scale(1.20);
            background-color: #C8BE6F;
            }

            .ReservaMostrar h2 {
                margin-top: 1px;
            }

        .button-link {
            background-color: #F7EFAA;
            border: none;
          
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 6px;
        }
        .Fondo{
            background-image: url('/Imagenes/Imagensol.png');
            background-size: 200px;
            background-repeat: repeat;
            background-position: top left;
        }

    </style>
</head>
<body class="Fondo">
    <div class="reservaContainer">

        @foreach (var Reserva in Model)
        {
            @if (Reserva.Estado == "Confirmada" || Reserva.Estado == "Cancelada")
            {
                <div class="ReservaMostrar">
                    <img src="https://brandemia.org/contenido/subidas/2022/10/marca-mcdonalds-logo.png" alt="Mcdonalds Logo" id="img" />
                    <div>
                        <h4>Mesa numero: @Reserva.MesaId</h4>
                        <p>Fecha: @Reserva.FechaReserva</p>
                        <p>Dirección: @Reserva.IdRestauranteNavigation.Nombre</p>
                        <p>Teléfono: @Reserva.IdRestauranteNavigation.Teléfono</p>
                        <p> Estado: @Reserva.Estado</p>
                    </div>

                </div>
            }
            else
            {



                <div class="ReservaMostrar">
                    <img src="https://brandemia.org/contenido/subidas/2022/10/marca-mcdonalds-logo.png" alt="Mcdonalds Logo" id="img" />
                    <div>
                        <h4>Mesa numero: @Reserva.MesaId</h4>
                        <p>Fecha: @Reserva.FechaReserva</p>
                        <p>Dirección: @Reserva.IdRestauranteNavigation.Nombre</p>
                        <p>Teléfono: @Reserva.IdRestauranteNavigation.Teléfono</p>
                        <p> Estado: @Reserva.Estado</p>

                        <form method="post" action="@Url.Action("SeleccionarPlato", "Platoes")">
                            <input type="hidden" name="ReservaId" value="@Reserva.Id" />
                            <button type="submit" class="button-link">Pagar</button>
                        </form>

                    </div>

                    

                </div>
            }
        }
        </div>
    </body>
