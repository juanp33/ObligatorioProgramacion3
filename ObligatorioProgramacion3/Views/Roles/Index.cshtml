@model IEnumerable<ObligatorioProgramacion3.Models.Role>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/StylesCrudeINDEX.css" asp-append-version="true" />
</head>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<h1>Index</h1>

<p>
    <a class="BotonCreate" asp-action="Create">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RolId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RolId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                    <a class="botonesEditDetailsDelete boton-edit" asp-action="Edit" asp-route-id="@item.RolId">Editar</a> |
                    <a class="botonesEditDetailsDelete boton-details" asp-action="Details" asp-route-id="@item.RolId">Detalles</a> |
                    <a class="botonesEditDetailsDelete boton-delete" asp-action="Delete" asp-route-id="@item.RolId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
