@model ObligatorioProgramacion3.Models.Reseña

@{
    ViewData["Title"] = "CrearReseñaUsuario";
}

<h1>Crear</h1>

<h4>Reseña</h4>
<hr />
<<div class="row">
    <div class="col-md-12">
        <form asp-action="CrearReseñaUsuario">
            <div class="form-group">
                <label asp-for="RestauranteId" class="control-label"></label>
                <select asp-for="RestauranteId" class="form-control" asp-items="ViewBag.RestauranteId"></select>
            </div>
            
            <div class="form-group">
                <label asp-for="Puntaje" class="control-label"></label>
                <select asp-for="Puntaje" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="Puntaje" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>          
            <div class="form-group">
                <input type="submit" value="CrearReseñaUsuario" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
