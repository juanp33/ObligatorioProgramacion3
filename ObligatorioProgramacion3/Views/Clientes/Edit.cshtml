@model ObligatorioProgramacion3.Models.Cliente

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegúrate de tener el layout configurado correctamente
}
<head>
    <link rel="stylesheet" href="~/css/StylesCrudeEdit.css" />
</head>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<hr />
<div class="row">
    <div class="col-md-4 container">
        <h1>Edit clientes</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoCliente" class="control-label"></label>
                <select asp-for="TipoCliente" class="form-control">
                    <option value="Nuevo">Nuevo</option>
                    <option value="Frecuente">Frecuente</option>
                    <option value="VIP">VIP</option>
                </select>
                <span asp-validation-for="TipoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuarios" class="control-label"></label>
                <select asp-for="IdUsuarios" class="form-control" asp-items="ViewBag.IdUsuarios"></select>
                <span asp-validation-for="IdUsuarios" class="text-danger"></span>
            </div>
            <div class="form-group button-group">

                <a asp-action="Index" class="button-link">Volver</a>
                <input type="submit" value="Guardar" class="button-link" />
                
            </div>
        </form>
      
    </div>
</div>


